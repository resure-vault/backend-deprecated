{
  "name": "sm-vault-backend-ts",
  "version": "0.1.0",
  "description": "TypeScript Express + Bun rewrite of sm-backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run src/index.ts",
    "start": "NODE_ENV=production bun run src/index.ts",
    "build": "tsc -p .",
    "check": "tsc -p .",
    "test": "echo \"No tests configured. Add tests in ./tests and update package.json\" && exit 0",
    "ci": "bun install && ./node_modules/.bin/tsc -p .",
    "migrate:run": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:run -d ./src/data-source.ts",
    "migrate:generate": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:generate -d ./src/data-source.ts -n"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sm-vault/sm-backend"
  },
  "author": "sm-vault <maintainer@example.com>",
  "license": "MIT",
  "dependencies": {
    "@stablelib/xchacha20poly1305": "^2.0.1",
    "argon2": "^0.30.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.0",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "resend": "^6.0.2",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.2"
  }
}
